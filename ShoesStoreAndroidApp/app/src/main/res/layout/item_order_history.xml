<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID-1928172"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvOrderPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="140000đ"
            android:gravity="end"
            android:layout_marginStart="14dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oct 20, 2024 08:29"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvOrderDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3x Local Avocado, 5x Fresh Bananas.."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gpsIcon"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:src="@drawable/gps_icon"/>
        <TextView
            android:id="@+id/tvOrderAddress"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:text="484 Lê Văn Việt, Phường Tăng Nhơn Phú A, Quận 9, HCM" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh giá"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:textSize="14sp" />

</LinearLayout>
